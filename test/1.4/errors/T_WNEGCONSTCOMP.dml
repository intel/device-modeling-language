dml 1.4;

device test;

method init() {
    local uint64 a = -1;
    /// WARNING WNEGCONSTCOMP
    assert a != -1;
    /// WARNING WNEGCONSTCOMP
    assert a > -1;
    /// WARNING WNEGCONSTCOMP
    assert !(a < -1);
    /// WARNING WNEGCONSTCOMP
    assert a >= -1;
    /// WARNING WNEGCONSTCOMP
    assert !(a <= -1);

    // Sanity
    local int64 b = -1;
    // No warning
    assert b == -1;
    // No warning
    assert !(b < -1);

    // Test workaround
    assert a == cast(-1, uint64);
}
