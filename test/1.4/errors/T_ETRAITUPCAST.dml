dml 1.4;

device test;

template a_t {}
template b_t {}
template c_t is b_t {}

port p {
    is c_t;
}

method init() {
    /// ERROR ETEMPLATEUPCAST
    cast(p, a_t);
    // no error
    cast(p, b_t);
