dml 1.4;
device test;

typedef layout "big-endian" {
    uint24 a;
    int24_be_t b;
    int24_le_t l;
} lt;

method init()
{
    local lt l;
    local uint8 *lp = cast(&l, uint8 *);
    local int i;
    for (i = 0; i < sizeof l; i++)
        lp[i] = i;

    // implicit big endian
    assert l.a == 0x000102;
    // explicit big endian
    assert l.b == 0x030405;
    // explicit little endian
    assert l.l == 0x080706;
}
