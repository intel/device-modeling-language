dml 1.4;
device test;
import "testing.dml";

typedef layout "big-endian" {
    uint24 a;
    int24_be_t b;
    int24_le_t l;
} lt;

method test() throws
{
        local lt l;
        local uint8 *lp = cast(&l, uint8 *);
        local int i;
        for (i = 0; i < sizeof l; i++)
            lp[i] = i;

        expect(l.a == 0x000102, "implicit big endian");
        expect(l.b == 0x030405, "explicit big endian");
        expect(l.l == 0x080706, "explicit little endian");
}
