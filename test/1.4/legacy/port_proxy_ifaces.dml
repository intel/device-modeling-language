dml 1.4;

import "simics/devs/signal.dml";

saved bool raised = false;

port p {
    implement signal {
        method signal_raise() {
            raised = true;
        }
    }
}

method test(bool proxies_enabled) {
    assert _compat_port_proxy_ifaces == proxies_enabled;
    assert (SIM_c_get_port_interface(dev.obj, "signal", "p") == NULL)
        == !proxies_enabled;
}
