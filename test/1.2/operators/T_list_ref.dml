dml 1.2;
device test;
import "testing.dml";

// Bug 8424
parameter x = [17,5][$p];
parameter p = 0;

if ($x != 17) { error; }

bank b {
    parameter l = [$r1, $r2[0], $r2[1]];
    register r1    size 1 @ undefined;
    register r2[2] size 1 @ undefined;
}

port pp[2] {
    parameter x = $i;
}
parameter y = [$pp];
method test() -> (bool ok) {
    if ($y[0][1].x != 1) { error; }

    foreach r in ($b.l)
        r = 0x47;
    ok = $b.r1 == 0x47 && $b.r2[0] == 0x47 && $b.r2[1] == 0x47;
}
