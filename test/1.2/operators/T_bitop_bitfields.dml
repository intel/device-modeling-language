// Bit-manipulation operations support operands of bitfields type

dml 1.2;
device test;
import "testing.dml";

// Bug #23984
method test -> (bool ok) {
    local bitfields 8 {} bf = 0x7c;
    local uint8 i1;
    local uint8 i2;
    local uint8 i3 = 5;
    local uint8 i4 = 5;
    ok = true;

    i1 = ~bf;
    ok = ok && i1 == 0x83;

    i1 = 5 & bf;
    i2 = bf & 5;
    i3 &= bf;
    bf &= i4;
    i4 = bf;
    ok = ok &&
        i1 == 4 &&
        i2 == 4 &&
        i3 == 4 &&
        i4 == 4;

    bf = 0x7c;
    i3 = i4 = 5;
    i1 = 5 | bf;
    i2 = bf | 5;
    i3 |= bf;
    bf |= i4;
    i4 = bf;
    ok = ok &&
        i1 == 0x7d &&
        i2 == 0x7d &&
        i3 == 0x7d &&
        i4 == 0x7d;

    bf = 0x7c;
    i3 = i4 = 5;
    i1 = 5 ^ bf;
    i2 = bf ^ 5;
    i3 ^= bf;
    bf ^= i4;
    i4 = bf;
    ok = ok &&
        i1 == 0x79 &&
        i2 == 0x79 &&
        i3 == 0x79 &&
        i4 == 0x79;

    bf = 0x7c;
    i1 = 5;
    i2 = bf << i1;
    ok = ok && i2 == 0x80;

    i2 = bf >> i1;
    ok = ok && i2 == 3;

    ok = ok && bf[6:1] == 0x3e;
}
