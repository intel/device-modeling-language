dml 1.2;
device test;
import "testing.dml";

typedef layout "big-endian" {
    uint32 a;
    uint32 b;
    uint32 c;
    uint32 d;
} bar_t;

typedef layout "big-endian" {
    bar_t bar;
    uint8 x;
} foo_t;

method test -> (bool ok) {
    local foo_t foo;
    local bar_t arry[8];
    ok = ((sizeof foo.bar == 16) &&
          (sizeof (foo.bar) == 16) &&
          /// WARNING WSIZEOFTYPE
          (sizeof (bar_t) == 16) &&
          (sizeoftype bar_t == 16) &&
          (sizeoftype (bar_t) == 16) &&
          (sizeof (arry) == 16 * 8));
}
