dml 1.2;
device test;
import "testing.dml";

method m (int sz) {
    local uint8 vla[sz[7:0]];
    vla[0] = 0;
    vla[sizeof vla - 1] = 255;
}

method n (int insize) -> (int outsize) {
    local uint8 vla[insize];
    outsize = sizeof vla;
}

method test -> (bool ok) {
    call $m(1);
    inline $m(1);
    local int outsize;
    call $n(17) -> (outsize);
    ok = (outsize == 17);
}
