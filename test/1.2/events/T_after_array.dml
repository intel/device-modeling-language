dml 1.2;
device test;
import "testing.dml";

data bool b[2];

connect c[2] {
    method m {
        log "info": "running %s.m", $qname;
        $b[$i] = !$b[$i];
    }
    method n {
        after (0.1) call $m;
    }
}

attribute alttest {
    parameter type = "i";
    parameter configuration = "pseudo";
    method set(value) {
        log "info": "running alttest";
        call $c[0].n;
        after (0.1) call $c[1].m;
        assert !$b[0] && !$b[1];
    }
}

method test -> (bool ok) {
    ok = $b[0] && $b[1];
}
