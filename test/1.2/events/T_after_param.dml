dml 1.2;
device test;
import "testing.dml";

attribute num {
    parameter allocate_type = "uint64";
}

method m(uint64 v) {
    $num = v;
}

port p[2] {
    attribute num {
        parameter allocate_type = "uint64";
    }
    method m(uint64 v) {
        $num = v;
    }
}

attribute alttest {
    parameter type = "i";
    parameter configuration = "pseudo";
    method set(value) {
        log "info": "running alttest";
        after (0.1) call $m(SIM_attr_integer(value));
        after (0.1) call $p[1].m(SIM_attr_integer(value));
        assert $num == 0;
        assert $p[0].num == 0;
        assert $p[1].num == 0;
    }
}
