dml 1.2;
device test;
import "testing.dml";

method test -> (bool ok) {
    ok = true;

    local int i;

    for (i = 0; i < 10; i++)
        ;
    ok = ok && (i == 10);

    // To trigger the gcc warning "value computed is not used", we have to use
    // a struct for j. At least not a plain variable.
    local struct { int x; } j;
    for (i = 0; i < 10; i++, j.x+=1)
        ;
    ok = ok && (i == 10);

    for (i = 0; ; i += 1) {
        if (i == 11) break;
    }
    ok = ok && (i == 11);
}
