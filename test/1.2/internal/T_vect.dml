dml 1.2;
provisional c_vect;

device test;

import "testing.dml";

// Test the basic operations of vect types

method test() -> (bool ok) {
    local int vect v;
    VINIT(v);
    VADD(v, 2);
    VADD(v, 3);
    VADD(v, 5);
    v[1] = 6;
    ok = VLEN(v) == 3
        && v[0] == 2
        && v[1] == 6
        && v[2] == 5;
    local int *i;
    local int j = 0;
    foreach i in (v) {
        ok = ok && *i == v[j];
        j++;
    }
    ok = ok && j == 3;

    VCLEAR(v);
    ok = ok && VLEN(v) == 0;
}
