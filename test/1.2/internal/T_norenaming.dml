dml 1.2;
device test;
import "testing.dml";

// Bug 18544

parameter _confidentiality = 3;

bank b {
    register a size 4 @ 0;
    register b size 4 @ 4;
    method set_a_to_1 {
        foreach r in ($mapped_registers) {
            if (r.name == "a")
                 r = 1;
        }
    }
}

method test -> (bool ok)
{
    call $b.set_a_to_1;
    ok = $b.a == 1 && $b.b == 0;
}
