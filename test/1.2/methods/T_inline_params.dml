dml 1.2;
device test;
import "testing.dml";

method m(uint32 i) -> (uint32 o) {
    o = i;
}

method foo(int x) -> (bool ok) {
    log "info": "x = %d (expected -1)", x;
    ok = (x == -1);
}

method test -> (bool ok) {
    local uint16 u16 = 1;
    local uint32 u32 = 2;
    local uint64 u64 = 3;
    local int16 s16 = -1;
    local int32 s32 = -2;
    local int64 s64 = -3;

    //inline $m(u16) -> (u16);
    inline $m(u32) -> (u32);
    inline $m(u64) -> (u64);

    //inline $m(s16) -> (s16);
    inline $m(s32) -> (s32);
    inline $m(s64) -> (s64);

    log "info": "%d %d %d %d %d %d", u16, u32, u64, s16, s32, s64;

    inline $foo(-1) -> (ok);

    ok = (ok &&
          u16 == 1  &&
          u32 == 2  &&
          u64 == 3  &&
          s16 == -1 &&
          s32 == -2  &&
          s64 == (1<<32)-3);
}
