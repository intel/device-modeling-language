dml 1.2;
device test;
import "testing.dml";

method m(x) -> (int y) {
    y = x;
}

method test -> (bool ok)
{
    local uint8 i8 = 255;
    local int r;
    // One of the weird inconsistencies of DML 1.2: DMLC considers uint8 * 2 to
    // have type uint8. This works better in DML 1.4.
    inline $m(i8 * 2) -> (r);
    assert r == 510 % 256;

    ok = true;
}
