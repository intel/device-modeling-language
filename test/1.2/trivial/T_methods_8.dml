dml 1.2;
device test;
import "testing.dml";

method test -> (bool result) {
    local int i = 17;
    local float f = 3.0;
    inline $add(i, 25) -> (i);
    inline $add(f, 1.0) -> (f);
    // don't test floating-point equivalence directly
    result = ((i == 42) && (cast(f*1000, int) == 4000));
}

// a polymorphic inline function
method add(x, y) -> (r) {
    r = x + y;
}
