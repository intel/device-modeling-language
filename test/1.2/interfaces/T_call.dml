dml 1.2;
device test;

/// COMPILE-ONLY

// need SC interface definition for C++ to compile
header %{
#if defined(DMLSYSC)
namespace dml {
    struct bar_interface_t : sc_core::sc_interface {
        virtual int bar(int a) = 0;
    };
}
#endif
%}

typedef struct {
    void (*bar)(conf_object_t *obj, int a);
} bar_interface_t;

connect c {
    interface bar;
}

method init() {
    foreach cnt in ([$c]){
        cnt.bar.bar(25);
    }
}
