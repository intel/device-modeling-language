dml 1.2;
device test;
import "testing.dml";

method test -> (bool ok) {
    local uint8 c[8];
    local layout "big-endian" {
        uint64 val;
    } *p = cast(c, void *);

    memset(c, 0, sizeof(c));
    c[0] = 0x47;
    c[7] = 0x11;
    ok = p->val == 0x4700000000000011;

    p->val = 0x0000004711000000;
    ok = (ok && c[3] == 0x47 && c[4] == 0x11);
}
