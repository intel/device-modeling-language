dml 1.2;
device test;
import "testing.dml";

typedef layout "big-endian" {
    uint32 x;
} A;

typedef layout "big-endian" {
    uint16 z;
    A a;
} B;

method test -> (bool ok)
{
    local char c[6];
    local B *b = cast(c, B*);

    b->z = 0;
    b->a.x = 0x12345678;

    log "info": "%02x %02x %02x %02x %02x %02x",
        c[0], c[1], c[2], c[3], c[4], c[5];
    ok = (c[0] == 0x00 &&
          c[1] == 0x00 &&
          c[2] == 0x12 &&
          c[3] == 0x34 &&
          c[4] == 0x56 &&
          c[5] == 0x78);
}
